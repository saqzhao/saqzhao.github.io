---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <!-- Links/Buttons -->
  <div class="links">
    {% if page.html %}
      {% if page.html contains '://' %}
        <a href="{{ page.html }}" class="btn btn-sm z-depth-0" role="button">HTML</a>
      {% else %}
        <a href="{{ page.html | prepend: '/assets/html/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">HTML</a>
      {% endif %}
    {% endif %}
    {% if page.pdf %}
      {% if page.pdf contains '://' %}
        <a href="{{ page.pdf }}" class="btn btn-sm z-depth-0" role="button">PDF</a>
      {% else %}
        <a href="{{ page.pdf | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">PDF</a>
      {% endif %}
    {% endif %}
    {% if page.video and site.enable_video_embedding %}
      <a class="abstract btn btn-sm z-depth-0" role="button">Video</a>
    {% elsif page.video %}
      <a href="{{ page.video }}" class="btn btn-sm z-depth-0" role="button">Video</a>
    {% endif %}
    {% if page.blog %}
      <a href="{{ page.blog }}" class="btn btn-sm z-depth-0" role="button">Blog</a>
    {% endif %}
    {% if page.github %}
      <a href="{{ page.github }}" class="btn btn-sm z-depth-0" role="button">GitHub</a>
    {% endif %}
    {% if page.poster %}
      {% if page.poster contains '://' %}
        <a href="{{ page.poster }}" class="btn btn-sm z-depth-0" role="button">Poster</a>
      {% else %}
        <a href="{{ page.poster | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Poster</a>
      {% endif %}
    {% endif %}
    {% if page.slides %}
      {% if page.slides contains '://' %}
        <a href="{{ page.slides }}" class="btn btn-sm z-depth-0" role="button">Slides</a>
      {% else %}
        <a href="{{ page.slides | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Slides</a>
      {% endif %}
    {% endif %}
  </div>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
